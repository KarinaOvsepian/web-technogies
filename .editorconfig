# top-most EditorConfig file
root = true

[*]
# Unix-style newlines
end_of_line = lf
# Ensure files end with a newline
insert_final_newline = true
# Default character encoding
charset = utf-8
# Indentation style: space or tab
indent_style = space
# Default indentation size
indent_size = 2
# Tab width (should match indent_size if using spaces)
tab_width = 2
# Remove trailing whitespace
trim_trailing_whitespace = true

[*.html]
# Specific settings for HTML files
# For example, you might want a different indent size for HTML
 indent_size = 4

[*.css]
# Specific settings for CSS files
# indent_size = 2
# Consider a maximum line length for CSS properties
 max_line_length = 80
